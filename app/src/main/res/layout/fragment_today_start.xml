<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_today_start_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <by.geekbrains.pictureseveryday.view.main.EquilateralImageView
        android:id="@+id/today_image_view"
        style="@style/equilateral_image_view_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_view_layout_height"
        android:contentDescription="@string/photo_of_the_day_stub"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/fragment_today_start_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_today_start_container"
        app:srcCompat="@drawable/ic_no_photo" />

    <TextView
        android:id="@+id/today_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/today_title_margin_start"
        android:background="?attr/colorPrimaryVariant"
        android:paddingStart="@dimen/today_title_padding_start"
        android:paddingTop="@dimen/today_title_padding_top"
        android:paddingEnd="@dimen/today_title_padding_end"
        android:paddingBottom="@dimen/today_title_padding_bottom"
        android:text="@string/today_fragment_title"
        android:textAlignment="center"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/today_fragment_title_text_size"
        app:layout_constraintRight_toLeftOf="@+id/today_image_view"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>