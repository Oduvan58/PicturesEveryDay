<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="equilateral_image_view_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="bottom_app_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="fab_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/teal_200</item>
    </style>

    <style name="bottom_sheet_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/header_padding_start_bottom_sheet</item>
        <item name="android:paddingEnd">@dimen/header_padding_end_bottom_sheet</item>
    </style>

    <style name="BottomSheetHeaderTextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/steel_blue</item>
        <item name="android:textSize">18sp</item>
        <item name="font">@font/monterey</item>
    </style>

    <style name="BottomSheetDescriptionTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/steel_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="font">@font/monterey</item>
    </style>
</resources>